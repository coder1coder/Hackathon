{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnectionString": "Server=localhost;Port=5433;Database=Hackathon;User ID=hackathon;Password=hackathon;",
    "Redis": "localhost:9379,password=redis,abortConnect=false"
  },
  "DataSettings": {
    "ApplyMigrationsAtStart": true,
    "AdministratorDefaults": {
      "Login": "administrator",
      "Password": "administrator"
    }
  },
  "EmailSettings": {
    "EmailSender": {
      "Server": "smtp.host.ru",
      "Port": 587,
      "Username": "username@host.ru",
      "Password": "password",
      "EnableSsl": true,
      "Sender": "username@host.ru"
    },
    "EmailConfirmationRequestLifetime": 5
  },
  "AuthOptions": {
    "Issuer": "Hackathon.API",
    "Audience": "Hackathon.UI",
    "Secret": "sSYal2$lLjaAAsSYal2$lLjaAAsSYal2$lLjaAA",
    "LifeTime": "524160"
  },
  "S3Options": {
    "ServiceUrl": "http://localhost:9000",
    "ForcePathStyle": true,
    "UseHttp": false,
    "AccessKey": "minio",
    "SecretKey": "minio123"
  },
  "RestrictedNames": {
    "Users": [
      "administrator", "admin"
    ]
  },
  "AppSettings": {
    "OriginsOptions": {
      "AllowUrls": [
        "http://localhost:5000",
        "https://localhost:5001",
        "https://localhost:5002",
        "http://localhost:5003",
        "http://localhost:4200"
      ]
    },
    "EnableSensitiveDataLogging": false,
    "PathBase": "/hackathon/api",
    "Hubs": {
      "Notifications": "hubs/notifications",
      "Chat": "hubs/chat",
      "Friendship": "hubs/friendship",
      "Events": "hubs/events"
    },
    "MessageBrokerSettings": {
      "Host": "rabbitmq://localhost:5676",
      "UserName": "guest",
      "Password": "guest"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.Extensions.Diagnostics.HealthChecks": "Information",
        "Microsoft.AspNetCore": "Information",
        "System": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log.txt",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "HackathonAPI"
            }
          ],
          "propertiesAsLabels": [
            "level"
          ]
        }
      }
    ]
  },
  "FileSettings": {
    "UnusedFilesDeleteJobFrequencyInHours": 48,
    "ProfileFileImage": {
      "MinLength": 512,
      "MaxLength": 2097152
    },
    "EventFileImage": {
      "MinLength": 512,
      "MaxLength": 5242880
    }
  }
}
